html.desktop, html.mobile
  .container
    position: relative

html.desktop
  .container
    @extend container-full
    &.nav-inactive
      .btn-toggle, .logo-title, .logo-image
        pointer-events: none
        display: block
    .logo-title
      display: block
      position: fixed
      margin: 0
      padding: 0
      top: calc(9vh - 50px + 9px)
      left: calc(7vh - 15px + 1px)
      height: 40px
      width: 260px
      cursor: pointer
      font-family: $font-family-black
      font-size: 37px
      line-height: 32px
      transform: translate3d(0,0,0)
      color: $text-color
      opacity: .001
      z-index: 10
      &.light
        color: #eee
      &.expanded
        cursor: default
        color: $text-color
      @media (min-width:1700px)
        top: calc(9vh - 50px)
        left: calc(7vh - 15px)
        height: 46px
        font-size: 46px
        line-height: 36px
      @media (min-width:3100px)
        top: calc(9vh - 50px - 20px)
        left: calc(7vh - 15px - 14px)
        height: 68px
        font-size: 68px
        line-height: 52px
    .btn-toggle
      position: fixed
      margin: 0
      padding: 0
      top: 9vh
      left: 7vh
      width: 55px
      height: 26px
      cursor: pointer
      opacity: .001
      z-index: 10
      span
        opacity: 1
        position: absolute
        left: 100%
        top: 0
        padding: 4px 0 0 9px
        font-size: 12px
        line-height: 12px
        color: $text-color
        transition: color .3s ease-in-out 0s
      svg
        position: relative
        width: 55px
        height: 26px
      &.light
        span
          color: #eee
        svg line, svg rect
          stroke: #eee
      svg line, svg rect
        fill: none
        stroke:  $text-color
        transition: stroke .3s ease-in-out 0s
      @media (min-width:1700px)
        width: 64px
        height: 30px
        svg
          width: 64px
          height: 30px
        span
          padding: 5px 0 0 10px
          font-size: 13px
          line-height: 13px
      @media (min-width:3100px)
        width: 85px
        height: 40px
        svg
          width: 85px
          height: 40px
        span
          padding: 5px 0 0 14px
          font-size: 17px
          line-height: 17px
    .logo-image
      position: fixed
      top: 0
      left: calc(25vw - 150px);
      cursor: pointer
      transform: translate3d(0, 0, 0)
      opacity: 0.001
      size 150px 170px
      background-color #292929
      text-align: center
      img
        position: absolute
        top: 0
        bottom: 0
        right: 0
        left: 0
        margin: auto
        size 103px 137px
    .overlay
      @extend container-abs
      visibility: hidden
      opacity: 0
      pointer-events: none
      background-image linear-gradient(to right, rgba(0, 65, 255, 0.2) 0%, transparent 100%)




html.mobile
  .container
    width: 100%
    height: 100%
    //overflow: hidden
  .logo-icon
    position: absolute
    top: 7vw
    left: 8vw
    width: 15vw
    height: 16.5vw
    pointer-events: initial
    z-index: 50
    &.light
      .logo-icon__up
        color: #fff
      .logo-icon__up span,  .logo-icon__bottom span
        background-color: #fff
    &__up
      position: absolute
      top: 0
      left: 0
      width: 100%
      font-family: $font-family-black
      font-weight: 400
      font-size: 10vw
      line-height: 9vw
      text-align: center
      letter-spacing: .7vw
      color: $text-color
      transition: color .4s ease-in-out 0s
      span
        display: block
        position: absolute
        top: 7.6vw
        left: 8.5vw
        width: 1vw
        height: 1vw
        border-radius: 50%
        transition: background-color .4s ease-in-out 0s
        background-color: $text-color
    &__bottom
      position: absolute
      top: 9vw
      left: 0
      width: 100%
      height: 7.5vw
      span
        display: block
        position: absolute
        width: 4.5vw
        height: 1px
        background-color: $text-color
        transition: background-color .4s ease-in-out 0s
        &:nth-child(1)
          top: 2.5vw
          left: 4vw
          @media (min-width:600px)
            top: 2vw
            left: 3vw
        &:nth-child(2)
          top: 3.8vw
          left: 5vw
          @media (min-width:600px)
            top: 2.95vw
            left: 4vw
        &:nth-child(3)
          top: 5.1vw
          left: 4vw
          @media (min-width:600px)
            top: 3.9vw
            left: 3vw
        &:nth-child(4)
          top: 6.4vw
          left: 5vw
          @media (min-width:600px)
            top: 4.85vw
            left: 4vw
  #orientation
    @extend container-abs-full
    background-color: #fff
    z-index: 100
    display: none
    h2
      font-size: 10vw
      display: block
      margin: 0
      position: absolute
      top: 25%
      left: 0
      width: 100%
      text-align: center
      color: #404040
      transform: translate3d(0,-50%,0)
    .turn
      display: block
      position: absolute
      top: 66%
      left: 0
      width: 100%
      text-align: center
      transform: translate3d(0,-50%,0)
      img
        width: 25vh
        margin: 0 0 2vh
        @media (min-width:600px)
          width: 20vw
      h3
        font-size: 2vw
        color: #404040
        margin: 0
        display: block
        width: 100
    .grid
      display: block
      @extend container-abs-full
      pointer-events: none
      span
        display: block
        position: absolute
        background-color: hsla(0, 0%, 73%, .25)
        &:nth-child(1)
          top: 0
          width: 1px
          height: 100%
          left: calc(25% - .5px)
        &:nth-child(2)
          top: 0
          width: 1px
          height: 100%
          left: calc(75% - .5px)
        &:nth-child(3)
          top: calc(50% - .5px)
          left: 0
          height: 1px
          width: calc(25% - .5px)
        &:nth-child(4)
          top: calc(50% - .5px)
          right: 0
          height: 1px
          width: calc(25% - .5px)
