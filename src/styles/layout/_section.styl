  p
    &:last-child
      margin: 0

.is-padding-bottom
  padding-bottom: 25vh
.is-padding-top
  padding-top: 25vh

.area
  position: relative
  @media (min-width:600px)
    display: flex
    flex-wrap: wrap
    align-content: flex-start
  &__item
    display: block
    position: relative
    &_brand, &_dark, &_light, &_white
      @extend .item-text
      z-index: 10
    &_empty, &_white
      background-color: #fff
    &_light
      background-color: #f3f3f3
    &_dark
      background-color: #292929
      color: #fff
      .title
        position: relative
        display: block
        margin-bottom: 2vh
        font-family: $font-family-bold
        text-decoration: underline
        &::before
          content: 'â€¢'
          margin-right: 5px
    &_bg
      background-position: 50%
      background-size: cover
      background-repeat: no-repeat
      z-index: 10
    &_promo
      padding: 2vw
      .area__icon
        display: block
        size: 50px
        margin: 0 auto 1vw
        border 1px solid transparent
        border-radius 50%
        text-align: center
        line-height: 54px
      .text
        display: block
        width: 72%
        margin: auto
        font-size: 1vw
    &_arrows
      .arrows
        position: absolute
        left: 0
        bottom: 2vw
        width: 12.5vh
        padding: 2vh
        background-color: #fff
        text-align: center
        .next, .prev
          margin: auto
        .next
          margin-bottom: 2vh
        svg
          top: 1.55vh
          left: 2.55vh
  &__caption
    position: absolute
    bottom: 0
    right: 0
    min-width: 50%
    max-width: 100%
    overflow: hidden
    font-family: $font-family-bold
    color: #fff
    height: 6vh
    line-height: 6vh
    padding: 0 1.2vw
    text-align: right
    background-color rgba(#292929,.8)
    span
      white-space: nowrap
      text-overflow: ellipsis
      overflow: hidden
      display: block
      width: 100%
  .overlay-hover
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    mix-blend-mode: multiply
    opacity: 0
    + .circle
      width: 12vh
      height: 12vh
      top: calc(50% - 6vh)
      left: calc(50% - 6vh)
      transform: scale(0) rotate(-1turn)
      &::after, &::before
        top: calc(50% - 0.5px)
        left: 42%
        width: 15%
        background-color: #adadad
      &::before
        transform: translate3d(0, 0, 0) rotate(45deg)
      &::after
        transform: translate3d(0, 0, 0) rotate(-45deg)
  .circle
    position: absolute
    border-radius: 50%
    background-color: #fff
    &::after, &::before
      content: ''
      display: block
      position: absolute
      height: 1px
      transform-origin: 100% 50%

.form
