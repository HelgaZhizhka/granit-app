html.desktop
  .menu
    display: block
    position: fixed
    top: 0
    left: 0
    width: 100vw
    height: 100vh
    background-color: hsla(0, 0%, 100%, .95)
    transform: translate3d(0, 0, 0)
    visibility: hidden
    opacity: .0001
    z-index: 10
    &__selector
      position: absolute
      top: calc(8.5vh - 1.3vh)
      right: calc(17vh)
      font-size: 1.5vh
      line-height: 1.5vh
      color: #959595
      span.divider
        display: block
        position: absolute
        top: .7vh
        right: 107%
        width: 10vh
        height: 1px
        background-color: #959595
        transform-origin: 0 50%
      span.title
        position: relative
        white-space nowrap
    &__close
      position: absolute
      top: calc(8vh - 3.1vh - 1px)
      right: calc(9vh - 3.1vh - 1px)
      width: calc(6.2vh - 2px)
      height: calc(6.2vh - 2px)
      border: 1px solid #959595
      border-radius: 50%
      cursor: pointer
      span
        display: block
        position: absolute
        top: calc(50% - .5px)
        left: 25%
        width: 50%
        height: 1px
        background-color: #959595
        &:nth-child(1)
          transform: rotate(45deg)
        &:nth-child(2)
          transform: rotate(-45deg)
    .signature
      position: absolute
      left: 2%
      bottom: 2%
      transform: rotate(-90deg)
      transform-origin: 0 0
      text-decoration: none
      font-size: .6vw
      color: #959595


html.mobile
  .menu
    display: block
    @extend container-abs-full
    pointer-events: none
    z-index: 50
    overflow: hidden
    &.active
      pointer-events: initial
      .menu__container
        pointer-events: initial
        z-index: 0
        visibility: inherit
        opacity: 1
        transform: translate(100%, 0%) matrix(1, 0, 0, 1, 0, 0)
      .menu__list
        li
          opacity: 1
          transform: translate3d(0,0,0)
          transition: transform 0.9s
          transition-timing-function: cubic-bezier(0.7,0,0.3,1)
      .menu__close
        opacity: 1
        transform: scale(1) rotate(0deg)
      .logo-icon
        opacity: 1
        transform: scale(1)
    &__container
      display: block
      position: absolute
      top: 0
      right: 100%
      width: calc(100% - 1px)
      height: 100%
      background-color: #fff
      border-right: 1px solid hsla(0,0%,73%,.25)
      overflow: hidden
      pointer-events: none
      visibility: hidden
      transition .3s all ease-in-out
      .info
        position: absolute
        left: 0
        width: 100%
        bottom: 0
        padding: 25px 20px 20px
        height: 20vh
        background: $primary-blue
        p
          font-size: 3.5vw
          line-height: 4vw
          color: #fff
          margin: 0
          &:nth-child(n+2)
            margin: .5vw 0 0
          &:nth-child(3)
            margin-top: 3vw
        a
          color: #fff
    &__close
      position: absolute
      top: calc(8% - 3.5vh - 1px)
      right: calc(14% - 3.5vh - 1px)
      width: calc(9vh - 2px)
      height: calc(9vh - 2px)
      border: 1px solid #959595
      border-radius: 50%
      transition all 1s $ease-in-out-quint
      transform: scale(0) rotate(360deg)
      opacity: 0
      z-index: 55
      &::after, &::before
        content: ''
        display: block
        position: absolute
        top: calc(50% - .5px)
        left: 25%
        width: 50%
        height: 1px
        background-color: #959595
      &::before
        transform: rotate(45deg)
      &::after
        transform: rotate(-45deg)
    &__list
      display: block
      position: absolute
      top: 20%
      left: 0
      right: 0
      bottom: 20vh
      margin: 0
      padding: 0 0 15px
      overflow-y: auto
      list-style-type: none
      li
        display: block
        margin: 0
        padding: 0 7vw
        position: relative
        margin-bottom: 5vw
        opacity: 0
        transition: transform 0s 0.4s
        transition-timing-function: cubic-bezier(0.7,0,0.3,1)
        z-index: 55
        transform: translate3d(-500px,0,0)
        &:nth-child(2)
          transform: translate3d(-1000px,0,0)
        &:nth-child(3)
          transform: translate3d(-1500px,0,0)
        &:nth-child(4)
          transform: translate3d(-2000px,0,0)
        &:nth-child(5)
          transform: translate3d(-2500px,0,0)
        &:nth-child(6)
          transform: translate3d(-3000px,0,0)
      a, a:visited
        display: block
        text-decoration: none
        font-size: 7vw
        text-align: left
        color: $text-color
        @media (min-width:600px)
          font-size: 4.2vw
    .logo-icon
      opacity: 0
      transform: scale(0)
      transition all .5s linear