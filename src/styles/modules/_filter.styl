@import "../spritePng"
/*type filter*/
.filter_type
  .ui-radio + .label::before,
  .ui-radio + .label::after
    content none
  .ui-radio:checked
    &.is-any
      + .label
        retinaSprite($sprite__icon_any_active_group)
    &.is-a
      + .label
        retinaSprite($sprite__icon_a_active_group)
    &.is-b
      + .label
        retinaSprite($sprite__icon_b_active_group)
    &.is-h
      + .label
        retinaSprite($sprite__icon_h_active_group)
    &.is-i
      + .label
        retinaSprite($sprite__icon_i_active_group)
    &.is-c
      + .label
        retinaSprite($sprite__icon_c_active_group)
    &.is-d
      + .label
        retinaSprite($sprite__icon_d_active_group)
    &.is-g
      + .label
        retinaSprite($sprite__icon_g_active_group)
    &.is-f
      + .label
        retinaSprite($sprite__icon_f_active_group)
    &.is-k
      + .label
        retinaSprite($sprite__icon_k_active_group)
    &.is-l
      + .label
        retinaSprite($sprite__icon_l_active_group)
    &.is-m
      + .label
        retinaSprite($sprite__icon_m_active_group)
    &.is-o
      + .label
        retinaSprite($sprite__icon_o_active_group)
  .ui-radio
    + .label
      display: block
      padding: 0
      background-repeat no-repeat
      font-size: 1vw
      text-align: center
      line-height: 55px
      color: #fff
    &.is-any
      + .label
        retinaSprite($sprite__icon_any_group)
    &.is-a
      + .label
        retinaSprite($sprite__icon_a_group)
    &.is-b
      + .label
        retinaSprite($sprite__icon_b_group)
    &.is-h
      + .label
        retinaSprite($sprite__icon_h_group)
    &.is-i
      + .label
        retinaSprite($sprite__icon_i_group)
    &.is-c
      + .label
        retinaSprite($sprite__icon_c_group)
    &.is-d
      + .label
        retinaSprite($sprite__icon_d_group)
    &.is-g
      + .label
        retinaSprite($sprite__icon_g_group)
    &.is-f
      + .label
        retinaSprite($sprite__icon_f_group)
    &.is-k
      + .label
        retinaSprite($sprite__icon_k_group)
    &.is-l
      + .label
        retinaSprite($sprite__icon_l_group)
    &.is-m
      + .label
        retinaSprite($sprite__icon_m_group)
    &.is-o
      + .label
        retinaSprite($sprite__icon_o_group)
  .filter__caption, .filter__ceil
    flex: 0 0 25vw
    width: 25vw
    height: 25vh
  .filter__caption
    position: relative
    padding: 2vw 2vw 2vw 7.5vw
    background-color #292929
    border-top: 1px solid #fff
    color: #fff
    .title
      display: block
      margin-bottom: 2vh
      font-family: $font-family-bold
      font-size: 1vw
      span
        display: block
    .arrows
      position: absolute
      bottom: 2vw
      height: 6.2vh
      width: 14vh
      left: calc(50% - 7vh)
      .next, .prev
        display: inline-block
      .prev
        margin-right: 10px
    .number
      position: absolute
      size: 4vw
      top: 2vw
      left: 2vw
      font-family: $font-family-black
      font-size: 2.5vw
      border: 1px solid $primary-blue
      background #fff
      color: $primary-blue
      text-align: center
      line-height: 3.6w
  .filter__ceil
    position: relative
    padding: 2vw
    .ui-radio + .label
      position: absolute
    label
      &:nth-child(1)
        .ui-radio + .label
          top: 2vw
          left: 2vw
      &:nth-child(2)
        .ui-radio + .label
          top: 2vw
          right: 2vw
      &:nth-child(3)
        .ui-radio + .label
          bottom: 2vw
          left: 2vw
      &:nth-child(4)
        .ui-radio + .label
          bottom: 2vw
          right: 2vw


/*color filter*/
.filter_color
  margin: 0
  list-style: none
  padding: 0 0 2vw 0
  font-size: 0
  li
    display: inline-block
    width: 50%
    &.title > span, .ui-checkbox + .label
      display: flex
      align-items: center
      padding: 0 2vw
      font-size: 1vw
      line-height: 1vw
      height: 5.6vh
      border: 1px solid #f3f3f3
    &.title > span
      font-family: $font-family-bold
      background-color: #f3f3f3
    .ui-checkbox + .label::before,
    .ui-checkbox + .label::after
      content none
    &.is-any
      .ui-checkbox:checked + .label
        background-color: #333
        color: #fff
        border-color #333
    &.is-white
      .ui-checkbox:checked + .label
        background-color: #fff
        border-color #333
    &.is-beige
      .ui-checkbox:checked + .label
        background-color: #caac7a
        color: #fff
        border-color #caac7a
    &.is-black
      .ui-checkbox:checked + .label
        background-color: #000
        color: #fff
        border-color #000
    &.is-grey
      .ui-checkbox:checked + .label
        background-color: #c6c6c6
        color: #fff
        border-color #c6c6c6
    &.is-red
      .ui-checkbox:checked + .label
        background-color: #e85253
        color: #fff
        border-color #e85253
    &.is-green
      .ui-checkbox:checked + .label
        background-color: #4cc35f
        color: #fff
        border-color #4cc35f
    &.is-brown
      .ui-checkbox:checked + .label
        background-color: #7e4941
        color: #fff
        border-color #7e4941
    &.is-violet
      .ui-checkbox:checked + .label
        background-color: #5e2c5d
        color: #fff
        border-color #5e2c5d
    &.is-blue
      .ui-checkbox:checked + .label
        background-color: #019add
        color: #fff
        border-color #019add
    &.is-colored
      .ui-checkbox:checked + .label
        background: linear-gradient(to top right, #006869 15%, #392e4c 25%, #991c2c 38%, #b84129 55%, #9e743a 84%)
        color: #fff
        border-color transparent
