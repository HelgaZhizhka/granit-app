html.desktop
  .square
    position: absolute
    width: 25vw
    height: 25vh
    &:nth-child(1)
      top: 0
      left: 0
    &:nth-child(n+2)
      cursor: pointer
    &:nth-child(2)
      top: 25vh
      left: 25vw
    &:nth-child(3)
      top: 25vh
      right: 0
    &:nth-child(4)
      top: 50vh
      left: 0
    &:nth-child(5)
      top: 50vh
      left: 50vw
    &:nth-child(6)
      top: 75vh
      left: 25vw
    &:nth-child(7)
      top: 75vh
      left: 75vw
    &.active
      .square__block
        div
          background-color rgba(0, 65, 255, 0.1)
          &:nth-child(4)
            background-color: $primary-blue
      //.square__title
      //  transform: translate3d(6px,0,0)
    &__block
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      overflow: hidden
      pointer-events: none
      div
        display: block
        position: absolute
        width: 100%
        height: 100%
        top: 0
        left: 0
        transform-origin: 0 50%
        //transform: scaleX(0)
        &:nth-child(1), &:nth-child(3)
          background-color: #fff
        &:nth-child(2)
          background-color: #e8e8e8
        &:nth-child(4)
          width: 6px
          //transform: scaleX(0)
          background-color: $primary-green
    &_info
      div
        &:nth-child(4)
          width: 100%
          background-color: #fff
    &__title
      display: block
      margin: 0
      position: absolute
      left: 9%
      bottom: 10%
      font-size: 1.2vw
      line-height: 1.5vw
      transform: translate3d(0,0,0)
    &__info-text
      position: absolute
      top: calc(9vh + 30px)
      left: calc(7vh - 10px)
      @media (min-width:1700px)
        top: calc(9vh + 50px)
        left: calc(7vh - 10px)
      @media (min-width:3100px)
        top: calc(9vh + 75px)
        left: calc(7vh - 20px)
      p
        margin: 0
        font-size: 11px
        color: #292929
        &:nth-child(n+2)
          margin: 4px 0 0
        @media (min-width:1700px)
          font-size: 14px
          line-height: 14px
          &:nth-child(n+2)
            margin: 5px 0 0
        @media (min-width:3100px)
          font-size: 19px
          line-height: 19px
          &:nth-child(n+2)
            margin: 10px 0 0
